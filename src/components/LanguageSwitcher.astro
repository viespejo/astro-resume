---
const currentPath = Astro.url.pathname;
const base = import.meta.env.BASE_URL;
const currentLang = currentPath.startsWith(base + '/es') ? 'es' : 'en';
---

<div class="flex items-center gap-2">
  <a
    href={`${base}/en`}
    class:list={[
      'text-sm',
      currentLang === 'en' ? 'font-bold text-slate-900' : 'text-slate-500',
    ]}
  >
    EN
  </a>
  <span class="text-slate-300">|</span>
  <a
    href={`${base}/es`}
    class:list={[
      'text-sm',
      currentLang === 'es' ? 'font-bold text-slate-900' : 'text-slate-500',
    ]}
  >
    ES
  </a>
</div>
